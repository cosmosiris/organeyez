<h3>Update Mission Statement</h3>
<form action="/org_sessions/<%= current_org.id %>/profile/mission_statement" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <textarea name="mission" rows="5" cols="60"><%= current_org.mission  %></textarea>
  <input type="submit" value="submit">
</form>
<p></p>

<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <% if @errors %>
      <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-4"></div>
</div>

