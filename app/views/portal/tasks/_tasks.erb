<ul>
  <div class="task_view_box">
    <li>
      <p><%= task.name %></p>
      <p><%= task.leader.first_name%> <%= task.leader.last_name%></p>
      <p><%= task.notes %></p>
      <button class="task_view_button"><a href="">Edit</a></button>
      <button class="steps_view_button"><a href="">View Steps</a></button>
      <form action="/tasks/<%= task.id  %>" method="POST" class="delete_task_form">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="project_id" value=<%= @project.id %>>
        <input type="submit" value="delete" class="task_delete_button floatright">
      </form>
    </li>
  </div>
</ul>

